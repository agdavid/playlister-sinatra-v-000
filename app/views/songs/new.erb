<% unless locals.empty? %>
  <%= message %>
<% end %>

<h1>Create a New Song</h1>
<form method="post" action="/songs">

  <label>Name: </label>
  <input type="text" name="song[name]" id="Name">
  <br></br>

  <label>Choose Genres: </label>
  <% Genre.all.each do |genre| %>
    <%= genre.name %>
    <input id="<%=genre.name%>" type="checkbox"  name="genres[]" value="<%= genre.id %>">
  <% end %>
  <br></br>

  <label>Artist: </label>
  <input id="Artist Name" type="text" name="artist[name]">
  <br></br>

  <input type="submit" value="Create"> 
</form>